# Production environment variables
# Copy this file to .env.production and fill in actual values

# SECURITY - CHANGE THESE IN PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=<generate-random-secret-key-minimum-32-chars>
POSTGRES_PASSWORD=<use-strong-password-minimum-16-chars>

# App Configuration
ENVIRONMENT=production
DEBUG=False
APP_NAME=IntelliMatch AI
APP_VERSION=1.0.0

# Database
POSTGRES_DB=intellimatch
POSTGRES_USER=postgres
DATABASE_URL=postgresql://postgres:<postgres-password>@db:5432/intellimatch

# Redis
REDIS_URL=redis://redis:6379/0

# Server
HOST=0.0.0.0
PORT=8000
API_V1_PREFIX=/api/v1

# CORS - Update with your actual frontend domain
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/data/uploads

# ML Models
ML_MODEL_NAME=mini
ML_STORAGE_PATH=/app/data/production
EMBEDDINGS_DIR=/app/data/embeddings

# Email (Optional - Configure if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=<your-email@gmail.com>
SMTP_PASSWORD=<your-gmail-app-password>
EMAIL_FROM=noreply@intellimatch.ai

# Security
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Monitoring (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Logging
LOG_LEVEL=INFO
